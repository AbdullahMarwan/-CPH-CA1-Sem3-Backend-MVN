<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="persistenceunit">
        <description>CA1 persistence unit</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.cph.ca1backend.entities.Person</class>
        <class>com.cph.ca1backend.entities.Cityinfo</class>
        <class>com.cph.ca1backend.entities.Address</class>
        <class>com.cph.ca1backend.entities.Hobby</class>
        <class>com.cph.ca1backend.entities.Phone</class>
        <class>com.cph.ca1backend.entities.Socialhub</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:8889/ca1"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>